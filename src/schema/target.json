{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/BossHobby/Targets/master/src/schema/target.json",
    "title": "QS Target",
    "description": "Target file for QS",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "description": "The unique identifier name for a target",
            "type": "string"
        },
        "manufacturer": {
            "type": "string"
        },
        "mcu": {
            "type": "string"
        },
        "alias": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "brushless": {
            "type": "boolean"
        },
        "leds": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "pin": {
                        "type": "string"
                    },
                    "invert": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "pin"
                ]
            }
        },
        "serial_ports": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "index": {
                        "type": "number"
                    },
                    "rx": {
                        "type": "string"
                    },
                    "tx": {
                        "type": "string"
                    },
                    "inverter": {
                        "type": "string"
                    }
                },
                "required": [
                    "index",
                    "rx",
                    "tx"
                ]
            }
        },
        "serial_soft_ports": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "index": {
                        "type": "number"
                    },
                    "rx": {
                        "type": "string"
                    },
                    "tx": {
                        "type": "string"
                    },
                    "inverter": {
                        "type": "string"
                    }
                },
                "required": [
                    "index",
                    "rx",
                    "tx"
                ]
            }
        },
        "spi_ports": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "index": {
                        "type": "number"
                    },
                    "miso": {
                        "type": "string"
                    },
                    "mosi": {
                        "type": "string"
                    },
                    "sck": {
                        "type": "string"
                    }
                },
                "required": [
                    "index",
                    "miso",
                    "mosi",
                    "sck"
                ]
            }
        },
        "i2c_ports": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "index": {
                        "type": "number"
                    },
                    "scl": {
                        "type": "string"
                    },
                    "sda": {
                        "type": "string"
                    }
                },
                "required": [
                    "index",
                    "scl",
                    "sda"
                ]
            }
        },
        "gyro_orientation": {
            "type": "number"
        },
        "gyro": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "exti": {
                    "type": "string"
                },
                "nss": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "nss"
            ]
        },
        "osd": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "nss": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "nss"
            ]
        },
        "flash": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "nss": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "nss"
            ]
        },
        "sdcard": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "nss": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "nss"
            ]
        },
        "rx_spi": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "nss": {
                    "type": "string"
                },
                "exti": {
                    "type": "string"
                },
                "ant_sel": {
                    "type": "string"
                },
                "lna_en": {
                    "type": "string"
                },
                "tx_en": {
                    "type": "string"
                },
                "busy": {
                    "type": "string"
                },
                "busy_exti": {
                    "type": "boolean"
                },
                "reset": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "nss"
            ]
        },
        "usb_detect": {
            "type": "string"
        },
        "fpv": {
            "type": "string"
        },
        "vbat": {
            "type": "string"
        },
        "vbat_scale": {
            "type": "number"
        },
        "ibat": {
            "type": "string"
        },
        "ibat_scale": {
            "type": "number"
        },
        "rgb_led": {
            "type": "string"
        },
        "sdcard_detect": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "pin": {
                    "type": "string"
                },
                "invert": {
                    "type": "boolean"
                }
            },
            "required": [
                "pin"
            ]
        },
        "buzzer": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "pin": {
                    "type": "string"
                },
                "invert": {
                    "type": "boolean"
                }
            },
            "required": [
                "pin"
            ]
        },
        "motor_pins": {
            "type": "array",
            "description": "Motor output pins for DSHOT/PWM control",
            "items": {
                "type": "string",
                "pattern": "^P[A-K][0-9]{1,2}$"
            },
            "minItems": 1,
            "maxItems": 8
        },
        "timers": {
            "type": "array",
            "description": "Timer configuration (typically empty as DMA handles timer assignments)",
            "items": {
                "type": "object"
            }
        },
        "dma": {
            "type": "object",
            "description": "DMA assignments for peripherals - each stream must be unique. DSHOT modes: DSHOT_DMAR (Timer Burst DMA for all 4 motors, eliminates F4 errata), DSHOT_CCR_M0-M3 (individual channel DMA, F4 errata safe), DSHOT_BB_CH1-3 (bitbang GPIO, F4 errata risk)",
            "patternProperties": {
                "^(RGB|DSHOT_CH[1-8]|DSHOT_DMAR|DSHOT_CCR_M[0-3]|DSHOT_BB_CH[1-3]|SPI[1-4]_(RX|TX)|SERIAL[1-8]_(RX|TX)|I2C[1-4]_(RX|TX)|UART[1-8]_(RX|TX))$": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "tag": {
                            "type": "string",
                            "description": "Hardware peripheral tag identifier - must match device type format",
                            "anyOf": [
                                {
                                    "description": "DMAR mode: Timer burst DMA (TIMER1, TIMER8, etc.)",
                                    "pattern": "^TIMER[1-9][0-9]*$"
                                },
                                {
                                    "description": "CCR/BB mode: Timer channel DMA (TIMER1_CH1, TIMER8_CH3, etc.)",
                                    "pattern": "^TIMER[1-9][0-9]*_CH[1-4]$"
                                },
                                {
                                    "description": "SPI peripheral tags (SPI1_MISO, SPI2_MOSI, etc.)",
                                    "pattern": "^SPI[1-4]_(MISO|MOSI)$"
                                },
                                {
                                    "description": "Serial/UART peripheral tags (SERIAL1_RX, UART2_TX, etc.)",
                                    "pattern": "^(SERIAL|UART)[1-8]_(RX|TX)$"
                                },
                                {
                                    "description": "I2C peripheral tags (I2C1_RX, I2C2_TX, etc.)",
                                    "pattern": "^I2C[1-4]_(RX|TX)$"
                                }
                            ]
                        },
                        "dma": {
                            "type": "string",
                            "description": "DMA stream assignment (must be unique across all peripherals)",
                            "pattern": "^DMA[1-2]_STREAM[0-9]+$"
                        },
                        "channel": {
                            "type": "number",
                            "description": "DMA channel for F4/F7 series",
                            "minimum": 0,
                            "maximum": 7
                        },
                        "request": {
                            "type": "number",
                            "description": "DMAMUX request number for G4/H7/AT32 series",
                            "minimum": 0,
                            "maximum": 255
                        }
                    },
                    "required": ["tag", "dma"],
                    "anyOf": [
                        {
                            "description": "STM32F4/F7 series: fixed stream/channel architecture",
                            "required": ["channel"],
                            "not": {"required": ["request"]}
                        },
                        {
                            "description": "STM32G4/H7/AT32 series: flexible DMAMUX architecture", 
                            "required": ["request"],
                            "not": {"required": ["channel"]}
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "name",
        "manufacturer",
        "mcu",
        "brushless",
        "gyro",
        "motor_pins"
    ]
}